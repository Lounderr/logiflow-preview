{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=LogiFlowAPI;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss zzz ",
        "ColorBehavior": "enabled"
      }
    }
  },
  "CorsAllowedOrigins": "http://localhost:4200",
  "AllowedHosts": "*",
  "TokenSettings": {
    "Issuer": "http://localhost:44319",
    "Audience": "http://localhost:4200",
    "Secret": "my-super-secret-key-that-nobody-knows-and-will-remain-unknown-until-the-eventual-end-of-time-and-space-and-honestly-i-ran-out-of-words-",
    "RefreshTokenExpiryInDays": 7,
    "AuthTokenExpiryInMinutes": 15
  }
}
